---
import '../styles/global.css';
---
<!doctype html>
<html lang="en" class="scroll-smooth">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content="AMAC helps you navigate Medicare — free licensed guidance, no pressure, no obligation. Call today." />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Merriweather:wght@700;900&display=swap" rel="stylesheet" />
<title>AMAC Medicare Benefits — Free Licensed Guidance</title>
</head>
<body class="antialiased">
<slot />
</body>
<script>
// UTM Tracking - capture and store campaign parameters
const params = new URLSearchParams(window.location.search);
const utmKeys = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_content', 'utm_term'];

// If any UTM params exist, save them all to localStorage
const utmData = {};
let hasUtm = false;

utmKeys.forEach(key => {
const value = params.get(key);
if (value) {
utmData[key] = value;
hasUtm = true;
}
});

if (hasUtm) {
localStorage.setItem('utm_data', JSON.stringify(utmData));
console.log('UTM captured:', utmData);
} else {
// Check if we have stored UTM data from a previous page load
const stored = localStorage.getItem('utm_data');
if (stored) {
console.log('UTM from storage:', JSON.parse(stored));
}
}
</script>
</html>
