<script>
  // === Callback Modal ===
  const modal = document.getElementById('callback-modal');
  const form = document.getElementById('callback-form');
  const success = document.getElementById('callback-success');

  function openModal() {
    modal.classList.remove('hidden');
    modal.classList.remove('pointer-events-none');
    document.body.classList.add('modal-open');
    requestAnimationFrame(() => {
      modal.classList.add('open');
    });
  }

  function closeModal() {
    modal.classList.remove('open');
    document.body.classList.remove('modal-open');
    setTimeout(() => {
      modal.classList.add('hidden');
      modal.classList.add('pointer-events-none');
      // Reset form state
      form.classList.remove('hidden');
      success.classList.add('hidden');
      form.reset();
    }, 200);
  }

  document.querySelectorAll('[data-open-modal]').forEach(btn => btn.addEventListener('click', openModal));
  document.querySelectorAll('[data-close-modal]').forEach(btn => btn.addEventListener('click', closeModal));

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal.classList.contains('hidden')) closeModal();
  });

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    form.classList.add('hidden');
    success.classList.remove('hidden');
  });

  // === Testimonial Carousel Auto-Scroll ===
  const track = document.getElementById('testimonial-track');
  let scrollSpeed = 0.5;
  let isPaused = false;
  const originalCount = 7;

  function getCardWidth() {
    const card = track.children[0];
    if (!card) return 0;
    return card.offsetWidth + 24; // card width + gap
  }

  function autoScroll() {
    if (!isPaused) {
      track.scrollLeft += scrollSpeed;
      // When we've scrolled past all original cards, jump back
      const resetPoint = getCardWidth() * originalCount;
      if (track.scrollLeft >= resetPoint) {
        track.scrollLeft -= resetPoint;
      }
    }
    requestAnimationFrame(autoScroll);
  }

  track.addEventListener('mouseenter', () => isPaused = true);
  track.addEventListener('mouseleave', () => isPaused = false);
  track.addEventListener('touchstart', () => isPaused = true, { passive: true });
  track.addEventListener('touchend', () => {
    setTimeout(() => isPaused = false, 3000);
  });

  requestAnimationFrame(autoScroll);

  // === Medicare Knowledge Quiz ===
  const quizData = [
    {
      question: "What age are most Americans first eligible for Medicare?",
      options: ["60", "62", "65", "67"],
      answer: 2
    },
    {
      question: "Which part of Medicare covers hospital stays?",
      options: ["Part A", "Part B", "Part C", "Part D"],
      answer: 0
    },
    {
      question: "What is Medicare Part D?",
      options: ["Dental coverage", "Prescription drug coverage", "Disability coverage", "Vision coverage"],
      answer: 1
    },
    {
      question: "When does the Annual Enrollment Period for Medicare occur?",
      options: ["January 1 – March 31", "July 1 – September 30", "October 15 – December 7", "Any time during the year"],
      answer: 2
    },
    {
      question: "What is a Medicare Supplement (Medigap) plan?",
      options: [
        "A replacement for Medicare",
        "Private insurance that helps pay costs Medicare doesn't cover",
        "A government dental plan",
        "The same thing as Medicare Part C"
      ],
      answer: 1
    }
  ];

  let currentQuestion = 0;
  let score = 0;
  let answered = false;
  const container = document.getElementById('quiz-container');

  function renderQuestion() {
    const q = quizData[currentQuestion];
    answered = false;

    container.innerHTML = `
      <div class="mb-6 flex items-center justify-between">
        <span class="text-sm font-medium text-gray-500">Question ${currentQuestion + 1} of ${quizData.length}</span>
        <div class="flex gap-1.5">${quizData.map((_, i) => `<div class="w-2.5 h-2.5 rounded-full ${i < currentQuestion ? 'bg-navy-700' : i === currentQuestion ? 'bg-navy-900' : 'bg-gray-200'}"></div>`).join('')}</div>
      </div>
      <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-6">${q.question}</h3>
      <div class="space-y-3">
        ${q.options.map((opt, i) => `
          <button type="button" data-index="${i}"
            class="quiz-option w-full text-left border border-gray-200 rounded-lg px-5 py-3.5 text-gray-700 font-medium hover:border-navy-700 hover:bg-gray-50 transition-all duration-150 cursor-pointer">
            <span class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-gray-100 text-sm font-bold text-gray-500 mr-3">${String.fromCharCode(65 + i)}</span>
            ${opt}
          </button>
        `).join('')}
      </div>
    `;

    container.querySelectorAll('.quiz-option').forEach(btn => {
      btn.addEventListener('click', () => handleAnswer(parseInt(btn.dataset.index)));
    });
  }

  function handleAnswer(index) {
    if (answered) return;
    answered = true;

    const correct = quizData[currentQuestion].answer;
    if (index === correct) score++;

    const buttons = container.querySelectorAll('.quiz-option');
    buttons.forEach((btn, i) => {
      btn.classList.add('answered');
      if (i === correct) btn.classList.add('correct');
      if (i === index && index !== correct) btn.classList.add('incorrect');
    });

    setTimeout(() => {
      currentQuestion++;
      if (currentQuestion < quizData.length) {
        renderQuestion();
      } else {
        renderScore();
      }
    }, 1200);
  }

  function renderScore() {
    let message, emoji;
    if (score <= 2) {
      message = "Medicare can be tricky — and that's exactly why AMAC exists.";
    } else if (score <= 4) {
      message = "Not bad! But there's always more to learn about your Medicare options.";
    } else {
      message = "Perfect score! You clearly take your Medicare knowledge seriously.";
    }

    container.innerHTML = `
      <div class="text-center py-4">
        <div class="text-5xl sm:text-6xl font-black text-navy-900 mb-2">${score}/${quizData.length}</div>
        <p class="text-lg text-gray-600 mb-6 leading-relaxed">${message}</p>
        <p class="text-gray-500 mb-8">Whether you scored 5 or 0, a free call with an AMAC licensed agent can help you make the best Medicare decision.</p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
          <a href="tel:+18005551234" class="inline-flex items-center gap-2 bg-cta-600 hover:bg-cta-700 text-white font-bold px-8 py-3.5 rounded-lg transition-colors duration-200">
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
            </svg>
            Call AMAC Now
          </a>
          <button type="button" data-open-modal class="inline-flex items-center gap-2 border-2 border-gray-300 hover:border-gray-400 text-gray-700 font-bold px-8 py-3 rounded-lg transition-colors duration-200 cursor-pointer">
            Request a Callback
          </button>
        </div>
      </div>
    `;

    // Rebind modal openers for the newly created button
    container.querySelectorAll('[data-open-modal]').forEach(btn => btn.addEventListener('click', openModal));
  }

  // Initialize quiz
  renderQuestion();
</script>
