    let formatted = '';
    if (digits.length > 0) formatted = '(' + digits.slice(0, 3);
    if (digits.length >= 3) formatted += ') ';
    if (digits.length > 3) formatted += digits.slice(3, 6);
    if (digits.length >= 6) formatted += '-';
    if (digits.length > 6) formatted += digits.slice(6, 10);
    e.target.value = formatted;
  });

  // === Testimonial Ticker (CSS animation, left-to-right) ===
  const track = document.getElementById('testimonial-track');
  const originalCount = 10;

  function setupTicker() {
    const card = track.children[0];
    if (!card) return;
    const cardWidth = card.offsetWidth + 16;
    const totalWidth = cardWidth * originalCount;

    track.style.width = 'max-content';
    track.style.animation = `ticker ${originalCount * 4}s linear infinite`;

    // Inject keyframes
    const style = document.createElement('style');
    style.textContent = `
      @keyframes ticker {
        0% { transform: translateX(-${totalWidth}px); }
        100% { transform: translateX(0); }
      }
    `;
    document.head.appendChild(style);
  }

  track.addEventListener('mouseenter', () => track.style.animationPlayState = 'paused');
  track.addEventListener('mouseleave', () => track.style.animationPlayState = 'running');
  track.addEventListener('touchstart', () => track.style.animationPlayState = 'paused', { passive: true });
